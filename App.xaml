<Application x:Class="DynaNoty.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <Style x:Key="DynamicIslandStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF1C1C1E"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                    Opacity="0.3" 
                                    ShadowDepth="0" 
                                    BlurRadius="20" 
                                    Direction="0"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="NotificationTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <Style x:Key="SubTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF8E8E93"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Application.Resources>
</Application>
