<Window x:Class="DynaNoty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DynaNoty" 
        Height="600" 
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowStartupLocation="Manual"
        Left="0"
        Top="0">
    
    <Grid>
        <Border Background="#FF1C1C1E" 
                CornerRadius="20" 
                Margin="20,20,20,0"
                Padding="20">
            <StackPanel>
                <TextBlock Text="DynaNoty" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>
                
                <Button Content="Test Notification" 
                        Click="TestNotification_Click"
                        Background="#FF007AFF"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,10"
                        Margin="0,5">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="10" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button Content="Test Music Notification" 
                        Click="TestMusicNotification_Click"
                        Background="#FF34C759"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,10"
                        Margin="0,5">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="10" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Test Call Notification" 
                        Click="TestCallNotification_Click"
                        Background="#FFFF3B30"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,10"
                        Margin="0,5">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="10" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Test Detail Notification" 
                        Click="TestDetailNotification_Click"
                        Background="#FF8E44AD"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,10"
                        Margin="0,5">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="10" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Test Actions Notification" 
                        Click="TestActionsNotification_Click"
                        Background="#FFE67E22"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,10"
                        Margin="0,5">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="10" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Настройки" 
                        Click="SettingsButton_Click"
                        Background="#FF007AFF"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,10"
                        Margin="0,5">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="10" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button Content="Exit" 
                        Click="Exit_Click"
                        Background="#FF8E8E93"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,10"
                        Margin="0,20,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="10" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
